 @startuml

enum TrumpNumber {
    ACE(1),
    TWO(2),
    THREE(3),
    FOUR(4),
    FIVE(5),
    SIX(6),
    SEVEN(7),
    EIGHT(8),
    NINE(9),
    TEN(10),
    JACK(10),
    QUEEN(10),
    KING(10)
}

enum Suit {
    SPADES, CLOVER, HEART, DIAMONDS
}

class Card {
    suit: Suit
    number: TrumpNumber
}

class CardDeck {
    allCard: ArrayDeque<Card>
}

interface Player {
    딜러(List<Card>, Hits)
    사용자(List<Card>, Hits)
}

class Dealer implements Player {
    allCard: CardDeck
    dealerCard: List<Card>
    dealerHits: Hits
}

class Gamer implements Player {
    gamerCard: List<Card>
    gamerHits: Hits
}

class Game {
    gamer: List<Player>
    dealer: Player
}

class Hits {
    더 받기()
    현재 카드값의 총합()
    21()
}

